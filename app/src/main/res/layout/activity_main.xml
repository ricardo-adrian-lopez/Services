<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Started services -->

    <!--Services class -->
    <Button
        android:id="@+id/btnStartService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onStartedServices"
        android:text="Start normal service" />

    <Button
        android:id="@+id/btnStopService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onStartedServices"
        android:text="Stop normal service" />

    <!-- Start intent service -->
    <Button
        android:id="@+id/btnStartIntent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onStartedServices"
        android:text="Start intent service" />

    <!-- Bound service -->
    <Button
        android:id="@+id/btnBoundService"
        android:onClick="onBoundservice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bound to service"/>

    <!-- Get data from service -->
    <Button
        android:id="@+id/btnGetData"
        android:onClick="onBoundservice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get data from service"/>

    <!-- Unbind from service -->
    <Button
        android:id="@+id/btnUnBind"
        android:onClick="onBoundservice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unbind from service"/>

</LinearLayout>